
import (
	"th.um"
	"rect.um"
	"window.um"

	"scene.um"
	"logger.um"
	"global.um"
	"effects.um"
	"game/gameloop.um"
)

fn main() {
	window.setup("td game", 192, 108)
	global.cam = rect.mk(96, 54, 192, 108)

	global.init()
	scene.init()
	gameloop.init()
	effects.init()

	logger.msg("running")

	for window.cycle(global.cam) {
		scene.handle()
		scene.draw()

		global.borderImg.draw(th.Transform{ s: th.Vf2{1, 1} })
	}
}
