
import (
	"tophat/tophat.um"
	"tophat/rawdraw.um"
	"tophat/rectangle.um"

	"global.um"
	"game.um"
)

fn main() {
	tophat.setup("title", 1280, 720)

	global.cam = rectangle.mk(0, 0, 192, 108)

	game.init()

	for true {
		tophat.cycle(&global.w, &global.h, 0x999999ff, global.cam)

		game.run()

		switch global.scene {
		case global.NONE:
			return
		}
	}
}
